<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroBio.Controller.InfoAluno"
             NavigationPage.HasNavigationBar="false">

            <ContentPage.Background>
                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                    <GradientStop Color="#10FFFFFF" Offset="1.4"/>
                    <GradientStop Color="#D30D2463" Offset="0.2"/>
                </LinearGradientBrush>
             </ContentPage.Background>

            <VerticalStackLayout>

                    <Grid 
                        ColumnDefinitions="*, *, *, *"
                        RowDefinitions="*"
                        HorizontalOptions="Fill"
                        Background="#00D6DBFF">

                    <Button
                    Text="CADASTRAR ALUNO"
                    TextColor="Black"
                    TextTransform="Uppercase"
                    x:Name="btn_cadastrar_aluno"
                    Clicked="btn_cadastrar_aluno_Clicked"
                    FontSize="17"
                    Grid.Column="0"
                    Grid.Row="0"
                    Background="transparent"
                    WidthRequest="380"
                    HeightRequest="120"/>

                    <Button
                    Text="ALTERAR INFORMAÇÕES DE ALUNOS"
                    TextColor="#FF0080E9"
                    x:Name="btn_info_aluno"
                    FontSize="17"
                    Grid.Column="1"
                    Grid.Row="0"
                    Background="transparent"
                    WidthRequest="380"
                    HeightRequest="120"/>

                    <Button
                    Text="CONSULTAR HISTÓRICO"
                    TextColor="Black"
                    x:Name="btn_historico"
                    Clicked="btn_historico_Clicked"
                    FontSize="17"
                    Grid.Column="2"
                    Grid.Row="0"
                    Background="transparent"
                    WidthRequest="380"
                    HeightRequest="120"/>
                    
                    <Button
                    Text="GERAR RELATÓRIOS"
                    TextColor="Black"
                    x:Name="btn_gerar_relatorio"
                    Clicked="btn_gerar_relatorio_Clicked"
                    FontSize="17"
                    Grid.Column="3"
                    Grid.Row="0"
                    Background="transparent"
                    WidthRequest="380"
                    HeightRequest="120"/>
                    </Grid>

                    <Frame
                    WidthRequest="1000"
                    HeightRequest="700"
                    BackgroundColor="#D80B0855"
                    BorderColor="Black">
                    </Frame>

                    <Button
                        Text="Sair"
                        x:Name="btn_sair"
                        Clicked="btn_sair_Clicked"
                        TextColor="White"
                        FontSize="15"
                        BackgroundColor="#9F000000"
                        HorizontalOptions="End"
                        VerticalOptions="End"
                        Grid.Column="0"
                        Grid.Row="3"
                        BorderWidth="14"
                        BorderColor="Transparent"
                        WidthRequest="130"
                        HeightRequest="70"/>

            </VerticalStackLayout>

                


</ContentPage>