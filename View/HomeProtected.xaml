<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroBio.Controller.HomeProtected"
             NavigationPage.HasNavigationBar="false">

            <ContentPage.Background>
                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                    <GradientStop Color="Transparent" Offset="1.4"/>
                    <GradientStop Color="#D3102150" Offset="0.2"/>
                </LinearGradientBrush>
             </ContentPage.Background>

        
                <VerticalStackLayout>

                    <Grid 
                        ColumnDefinitions="*, *, *"
                        RowDefinitions="*"
                        HorizontalOptions="Fill"
                        Background="#00D6DBFF">

                    <Button
                    Text="CADASTRAR ALUNO"
                    TextColor="Black"
                    x:Name="btn_cadastrar_aluno"
                    Clicked="btn_cadastrar_aluno_Clicked"
                    FontSize="17"
                    Grid.Column="0"
                    Grid.Row="0"
                    Background="transparent"
                    WidthRequest="380"
                    HeightRequest="120"/>

                    <Button
                    Text="ALTERAR INFORMAÇÕES DE ALUNOS"
                    TextColor="Black"
                    FontSize="17"
                    Grid.Column="1"
                    Grid.Row="0"
                    Background="transparent"
                    WidthRequest="380"
                    HeightRequest="120"/>
                    
                    <Button
                    Text="GERAR RELATÓRIOS"
                    TextColor="Black"
                    FontSize="17"
                    Grid.Column="2"
                    Grid.Row="0"
                    Background="transparent"
                    WidthRequest="380"
                    HeightRequest="120"/>
                    </Grid>

                </VerticalStackLayout>

</ContentPage>