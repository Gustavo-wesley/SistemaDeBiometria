<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroBio.Controller.HomeProtected"
             NavigationPage.HasNavigationBar="false">

            <ContentPage.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0.8,0">
                    <GradientStop Color="#00C2C2C2" Offset="1.4"/>
                    <GradientStop Color="#D30D2463" Offset="0.2"/>
                </LinearGradientBrush>
             </ContentPage.Background>

        
                <VerticalStackLayout
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                    <Grid 
                        ColumnDefinitions="*, *, *, *"
                        RowDefinitions="*"
                        ColumnSpacing="10"
                        HorizontalOptions="Fill"
                        Background="#00D6DBFF">

                    <Button
                    Text="CADASTRAR ALUNO"
                    TextColor="White"
                    x:Name="btn_cadastrar_aluno"
                    Clicked="btn_cadastrar_aluno_Clicked"
                    FontSize="17"
                    Grid.Column="0"
                    Grid.Row="0"
                    Background="#D80414A1"
                    BorderWidth="30"
                    BorderColor="#D80414A1"
                    WidthRequest="380"
                    HeightRequest="220"/>

                    <Button
                    Text="ALTERAR INFORMAÇÕES DE ALUNOS"
                    TextColor="White"
                    x:Name="Alterar_info_aluno"
                    Clicked="Alterar_info_aluno_Clicked"
                    FontSize="17"
                    Grid.Column="1"
                    Grid.Row="0"
                    Background="#D80414A1"
                    BorderWidth="30"
                    BorderColor="#D80414A1"
                    WidthRequest="380"
                    HeightRequest="220"/>

                    <Button
                    Text="CONSULTAR HISTÓRICO"
                    TextColor="White"
                    x:Name="Consultar_Histórico"
                    Clicked="Consultar_Histórico_Clicked"
                    FontSize="17"
                    Grid.Column="2"
                    Grid.Row="0"
                    Background="#D80414A1"
                    BorderWidth="30"
                    BorderColor="#D80414A1"
                    WidthRequest="380"
                    HeightRequest="220"/>
                    
                    <Button
                    Text="GERAR RELATÓRIOS"
                    TextColor="White"
                    x:Name="Gerar_relatorio"
                    Clicked="Gerar_relatorio_Clicked"
                    FontSize="17"
                    Grid.Column="3"
                    Grid.Row="0"
                    Background="#D80414A1"
                    BorderWidth="30"
                    BorderColor="#D80414A1"
                    WidthRequest="380"
                    HeightRequest="220"/>
                    </Grid>

                </VerticalStackLayout>

</ContentPage>