<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CadastroBio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CadastroBio.Controller"
    Shell.FlyoutBehavior="Flyout"
    Title="CadastroBio"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}"
        Route="login" />

    <ShellContent
        Title="Cadastrar"
        ContentTemplate="{DataTemplate local:Cadastro}"
        Route="cadastro" />

    <ShellContent
        Title="Protected_1"
        ContentTemplate="{DataTemplate local:HomeProtected}"
        Route="Home"/>

    <ShellContent
        Title="Protected_1.1"
        ContentTemplate="{DataTemplate local:CadastrarAluno}"
        Route="cadastrarAluno"/>

    <ShellContent
        Title="Protected_1.2"
        ContentTemplate="{DataTemplate local:InfoAluno}"
        Route="informacaoAluno"/>

    <ShellContent
        Title="Protected_1.3"
        ContentTemplate="{DataTemplate local:Relatorio}"
        Route="relatorio"/>

</Shell>
